<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/plant"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/plant_plant_two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleX="-1"
                tools:src="@drawable/img_plant_temp_p4"
                app:layout_constraintHorizontal_bias="0.64"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintWidth_percent="0.50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/plant_plant_one"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                tools:src="@drawable/img_plant_temp_p4"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintWidth_percent="0.60"
                app:layout_constraintVertical_bias="0.15"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/plant_plant_single"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                tools:src="@drawable/img_plant_temp_p1"
                app:layout_constraintWidth_percent="0.68"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/plant_pot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                tools:src="@drawable/img_pot_test"
                app:layout_constraintWidth_percent="0.64"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>