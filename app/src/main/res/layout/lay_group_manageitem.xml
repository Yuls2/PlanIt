<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/manage_img_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:layout_gravity="center"
        tools:src="@drawable/ic_icon_member"
        app:tint="@color/pi_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/manage_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="설정 명"
            style="@style/tv_title_t3"/>
        <TextView
            android:id="@+id/manage_tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="설정에 대한 설명"
            style="@style/tv_title_s2"/>
    </LinearLayout>
</LinearLayout>