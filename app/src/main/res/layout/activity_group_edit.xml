<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pi_back"
    tools:context=".view.editcheckitem.PostWriteActivity">

    <include layout="@layout/toolbar_subpage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="300dp"
        android:background="@drawable/back_round_white_top"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/lay_buttons"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_icon_planet" />

                        <TextView
                            style="@style/tv_title_t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="플래닛의 이름을 적어주세요" />
                    </LinearLayout> <!-- 타이틀 -->
                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:gravity="center_vertical"
                        tools:text="테스트 텍스트\n안녕하세요오옹"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_icon_planet" />

                        <TextView
                            style="@style/tv_title_t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="플래닛의 한 줄 소개를 적어보세요" />
                    </LinearLayout> <!-- 타이틀 -->
                    <EditText
                        android:id="@+id/edt_comment"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:inputType="textMultiLine"
                        android:gravity="center_vertical"
                        tools:text="테스트 텍스트\n안녕하세요오옹"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_icon_planet" />

                        <TextView
                            style="@style/tv_title_t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="플래닛의 규칙을 작성해 보세요" />
                    </LinearLayout> <!-- 타이틀 -->
                    <EditText
                        android:id="@+id/edt_rule"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:inputType="textMultiLine"
                        android:gravity="center_vertical"
                        tools:text="테스트 텍스트\n안녕하세요오옹"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_icon_planet" />

                        <TextView
                            style="@style/tv_title_t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="플래닛 가입을 자동으로 수락할까요?" />

                        <CheckBox
                            android:id="@+id/ch_auto_accept"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:button="@drawable/back_checkbox"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:checked="true"
                            style="@style/piCheckBoxStyle" />
                        <TextView
                            android:id="@+id/tv_auto_accept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:text="네"
                            style="@style/tv_title_s1"/>
                    </LinearLayout> <!-- 타이틀 -->

                </LinearLayout>
            </ScrollView>
<!--        하단 버튼-->

            <LinearLayout
                android:id="@+id/lay_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent">
                <Button
                    android:id="@+id/btn_cancel"
                    android:text="취소"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    style="@style/btn_line"/>
                <Button
                    android:id="@+id/btn_upload"
                    android:text="완료"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>