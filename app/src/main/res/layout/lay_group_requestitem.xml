<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_postitem"
    android:padding="20dp">

    <TextView
        android:id="@+id/grequest_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_title_t2"
        android:maxLines="1"
        tools:text="유저 닉네임"/>

    <TextView
        android:id="@+id/grequest_tv_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:maxLines="10"
        style="@style/tv_title_s2"
        tools:text="가입 신청 메세지"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/grequest_btn_reject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            style="@style/btn_line"
            android:text="거절"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/grequest_btn_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="수락"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>